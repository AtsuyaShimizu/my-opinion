# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# X API (optional for external issue ingestion)
X_API_BEARER_TOKEN=your-x-api-bearer-token
X_API_BASE_URL=https://api.x.com/2

# X issue seeds as JSON array:
# [{"title":"消費税・物価対策","query":"(消費税 OR 物価高) lang:ja -is:retweet","description":"..."}]
X_ISSUE_SEEDS_JSON=

# Text display policy for external content: broad | link_only | aggregated
X_TEXT_POLICY=broad
